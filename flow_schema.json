{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["flows"],
  "properties": {
    "config": { "type": "object" },
    "system_prompts": { "type": "object" },
    "symptoms": { "type": "object" },
    "slots": { "type": "object" },
    "campaigns": { "type": "object" },
    "flows": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "properties": {
            "description": { "type": "string" },
            "triggers": { 
              "anyOf": [
                { "type": "array", "items": { "type": "string" } },
                { "type": "string" }
              ]
            },
            "is_locked": { "type": "boolean" },
            "web_survey": { "type": "object" },
            "steps": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type"],
                "properties": {
                  "id": { "type": "string" },
                  "type": { "enum": ["response", "collect", "action", "branch", "schedule", "validate"] },
                  "content": { "type": "string" },
                  "variable": { "type": "string" },
                  "condition": { "type": "string" },
                  "target_flow": { "type": "string" },
                  "action_name": { "type": "string" },
                  "delay_days": { "type": "integer" },
                  "delay_hours": { "type": "integer" },
                  "resume_time": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
